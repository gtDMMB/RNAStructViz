INCLUDE_PATH = -I/sw/include -I/usr/X11/include/
LIBRARY_PATH = -L/sw/lib -L/usr/X11/lib/ 
CPPFLAGS = $(INCLUDE_PATH) -arch i386 -g -Wall -U__APPLE__
LDFLAGS =-arch i386 -g  -Wall -U__APPLE__
CC = g++

SRC = GraphWindow.cpp \
	main.cpp

LIBS = -lfltk -lfltk_gl -lX11

OBJS = $(SRC:.cpp=.o)

%.o: %.cpp
	$(CC) -c $(CPPFLAGS) $< -o $@

graph: $(OBJS)
	$(CC) $(LDFLAGS) -o $@ $^ $(LIBRARY_PATH) $(LIBS)

clean:
	rm -f $(OBJS) graph

depends:
	makedepend $(INCLUDE_PATH) $(SRC)

# DO NOT DELETE

